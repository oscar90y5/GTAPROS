<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="GTAPROSPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>modelo.DiscountCode</class>
    <class>modelo.PurchaseOrder</class>
    <class>modelo.Product</class>
    <class>modelo.Manufacturer</class>
    <class>modelo.ProductCode</class>
    <class>modelo.MicroMarket</class>
    <class>modelo.Customer</class>
    <class>dominio.Actividad</class>
    <class>dominio.InformeTareas</class>
    <class>dominio.Miembro</class>
    <class>dominio.Proyecto</class>
    <class>dominio.Tarea</class>
    <class>dominio.Vacaciones</class>
    <class>dominio.Usuario</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/sample"/>
      <property name="javax.persistence.jdbc.user" value="app"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="app"/>
    </properties>
  </persistence-unit>
</persistence>
